{
  "extends": ["config:base"],

  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["major", "minor", "patch", "pin"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchPackageNames": ["next", "@next/eslint-plugin-next", "@netlify/plugin-nextjs"],
      "automerge": false
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "automerge": true
    }
  ]
}
